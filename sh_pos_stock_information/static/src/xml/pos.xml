<?xml version="1.0" encoding="UTF-8"?>
<templates id='template' xml:space="preserve">
    <t t-extend="ProductItem" t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension" owl="1">
        <xpath expr='//div[hasclass("product-content")]//div' position='before'>
            <t t-if='env.pos.config.sh_enable_on_hand_qty'>
                <t t-if='env.pos.config.sh_manage_stock == "on_hand_qty"'>
                    <t t-if='props.product.type == "product"'>
                        <t t-if='env.pos.product_qty_data_dict[props.product.id][0] > 0'>
                            <span class='sh_display_positive_qty' data-toggle="tooltip" title="On Hand Qty">
                                <div t-att-id='props.product.id' class='on_hand_qty'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][0]' />
                                </div>
                            </span>
                        </t>
                        <t t-else=''>
                            <span class='sh_display_nagative_qty' data-toggle="tooltip" title="On Hand Qty">
                                <div t-att-id='props.product.id' class='on_hand_qty'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][0]' />
                                </div>
                            </span>
                        </t>
                    </t>
                </t>
                <t t-if='env.pos.config.sh_manage_stock == "available_qty"'>
                    <t t-if='props.product.type == "product"'>
                        <t t-if='env.pos.product_qty_data_dict[props.product.id][1] > 0'>
                            <span class='sh_display_positive_qty' data-toggle="tooltip" title="Virtual Qty">
                                <div t-att-name='props.product.id'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][1]' />
                                </div>
                            </span>
                        </t>
                        <t t-else=''>
                            <span class='sh_display_nagative_qty' data-toggle="tooltip" title="Virtual Qty">
                                <div t-att-name='props.product.id'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][1]' />
                                </div>
                            </span>
                        </t>
                    </t>
                </t>
                <t t-if='env.pos.config.sh_manage_stock == "both"'>
                    <t t-if='props.product.type == "product"'>
                        <t t-if='env.pos.product_qty_data_dict[props.product.id][0] > 0'>
                            <span class='sh_display_positive_qty' data-toggle="tooltip" title="On Hand Qty">
                                <div t-att-id='props.product.id' class='on_hand_qty'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][0]' />
                                </div>
                            </span>
                        </t>
                        <t t-else=''>
                            <span class='sh_display_nagative_qty' data-toggle="tooltip" title="On Hand Qty">
                                <div t-att-id='props.product.id' class='on_hand_qty'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][0]' />
                                </div>
                            </span>
                        </t>
    
                        <t t-if='env.pos.product_qty_data_dict[props.product.id][1] > 0'>
                            <span t-attf-class="sh_display_positive_virtual_qty sh_both_qty_visible" data-toggle="tooltip" title="Virtual Qty">
                                <div t-att-name='props.product.id'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][1]' />
                                </div>
                            </span>
                        </t>
                        <t t-else=''>
                            <span t-attf-class="sh_display_nagative_virtual_qty sh_both_qty_visible" data-toggle="tooltip" title="Virtual Qty">
                                <div t-att-name='props.product.id'>
                                    <t t-esc='env.pos.product_qty_data_dict[props.product.id][1]' />
                                </div>
                            </span>
                        </t>
                    </t>
                </t>
            </t>
        </xpath>
    </t>
</templates>
